/* Основной стиль для QTabWidget */
QTabWidget::pane { /* Стиль для области с вкладками */
    background-color: rgb(24,24,24);
    border: 1px solid #C2C7CB;
    background: #F5F5F5;
}


QTabWidget::pane {
    border: 1px solid rgb(24,24,24);
}

/* Стиль для вкладок в неактивном состоянии */
QTabBar::tab {
    color: rgb(24, 24, 24);
    background: rgb(240, 240, 240);
    padding: 3px;
    padding-left: 5px;
    min-width: 130px;
    border-left: 2px solid rgb(24, 24, 24);
    font: bold "Consolas";
}

/* Стиль для активной вкладки */
QTabBar::tab:selected {
    background: rgb(200, 200, 200);
    color: rgb(24, 24, 24);
    border-left: 2px solid rgb(33, 33, 33);
}

/* Стиль для вкладок при наведении */
QTabBar::tab:hover {
    background: rgb(240, 240, 240);
    color: rgb(24, 24, 24);
    border-left: 2px solid rgb(33, 33, 33);
}

/* Стиль для вкладок при наведении */
QTabBar::tab:active {
    background: #007cad;
    border-left: 2px solid rgb(33, 33, 33);
}

/* Стиль для кнопки закрытия вкладки */
QTabBar::close-button {
    image: url(:/resources/icons/close.png); /* Иконка закрытия вкладки */
    subcontrol-position: right; /* Положение иконки справа */
}

QTabBar::tab:top:!selected {
    background: #e0e0e0;
}

QTabBar::scroller { /* the width of the scroll buttons */
    width: 50px;
    background: rgb(240, 240, 240);
}

QTabBar::scroll-button:pressed {
    background: #d0d0d0;
}



